console.log("rendering create js erb");

var pinx   = "<%= @comment_thread.pin_x %>";
var piny   = "<%= @comment_thread.pin_y %>";

var count  = "<%= @comment_thread.id %>";
var user   = "<%= current_user.email %>";
var type   = "<%= current_user.role_type %>";

var $pin = $("<img/>", {"src":          "/assets/defaultpin.png",
                       "class":         "pin",
                       "id":            "pin-"+count,
                       "title":         count,
                       "data-toggle":   "tooltip",
                       "data-placement":"right",
                      });

$pin.css("position", "absolute");
$pin.css({top: piny+"px", left: pinx+"px"});
$pin.draggable();

var $comment_thread = $("<%= escape_javascript(render 'comment_thread') %>");

$comment_thread
              .attr("id", "comment-thread-"+count)

              .on("keypress", "textarea", function(e) {
                var code = e.keyCode? e.keyCode : e.which;
                if (code==13) { 
                  e.preventDefault();
                  var comment         = $(this).val();
                  var comment_history = $(this).closest(".comment-thread").find(".comment-history");
                  if (comment.trim()!="") {
                    var new_comment_line = $("<span class='comment new'><span class="+type+">" + user  + "</span></span> : <span class='text'>" + comment + "<br /></span></span>");
                    comment_history.append(new_comment_line);
                    $("#save").removeClass("disabled");
                    console.log(comment_history);
                  }
                  $comment_history = comment_history[0];
                  $comment_history.scrollTop = $comment_history.scrollHeight;
                  $(this).val("").focus();
                }
              })

              .find("textarea").droppable({
                
                over:   function(e, ui) {
                  console.log("over")
                },

                out:    function(e, ui) {
                  console.log("out")
                },
                
                accept: function(e, ui) {
                  console.log("accept")
                },

                drop:   function(e, ui) {
                  console.log("drop")
                },

                snap:       true,
                greedy:     true,
                tolerance:  "pointer"

              })


$("#design-container")
            .append($pin)
            .append($comment_thread);

$comment_thread
            .addClass("unsaved")
            .find("textarea").focus()

$comment_thread
            .find("span.number").html(count)
