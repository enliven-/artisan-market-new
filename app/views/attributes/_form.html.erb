<%= simple_form_for([@palette, @attribute_layer, @attribute]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :label %>
    <%= f.collection_select(:attribute_layer_id, AttributeLayer.all, :id, :label) %>    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
